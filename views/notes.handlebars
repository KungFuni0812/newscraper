<div class="container-fluid">
    <div class="bg-dark text-light">
        <div class="bg-dark pt-5 pb-5 ps-5 ms-5 row d-flex align-items-center">
            <div class="col-5">
                <a href="/" class= "list-group-item list-group-item-action bg-dark text-light"><h1 class="display-4">World News Scraper</h1></a>
            </div>
        </div>
    </div>
    <div class = "row ms-5 ps-5">
        <div class ="article-notes col-12">
            <p class="pt-3 pb-3 ps-5 me-5"><b>Comment Section</b></p>
            {{#each notes}}
                {{> notes/notes-block}}
            {{/each}}
        </div>
        <div class="col-9">
            <div class= "mb-3 row ms-5">
                <label class="user" id="user-name">User Name</label>
                <input class="user" id="user-name-input" placeholder="Your Name">
            </div>
        </div>
        <div class="col-9">
            <div class= "mb-3 row ms-5">
                <label class="user-comment" id="user-comment">Comment</label>
                <textarea class="user-comment" id="user-comment-input" rows="3"></textarea>
            </div>
        </div>
        <div class="col-9">
            <div class= "mb-3 row ms-5">
                <button id="add-comment" data-id={{articleId}}>Add Comment</button>
            </div>
        </div>
    </div>
    <div class="modal fade" id="delete-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <p>Are you sure you want to delete this comment?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="close-modal btn btn-secondary" id="closebutton">Close</button>
                    <button type="button" class="close-modal btn btn-danger" id="confirm-btn">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>

